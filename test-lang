type Point:
    Float: x
    Float: y
    Float: z
    
type Line:
    Point: start
    Point: end

type Triangle:
    Line: one
    Line: two
    Line: three

type Quad:
    Triangle: bottom
    Triangle: top

type Cuboid:
    Point: origin
    Quad: front
    Quad: back
    Quad: left
    Quad: right
    Quad: bottom
    Quad: top


